<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_naranja"
    tools:context=".MainActivity2_ModificarAlumno">

    <TextView
        android:id="@+id/tv_alumnos"
        android:layout_width="179dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="204dp"
        android:text="@string/tv_alumnos"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner_lista_alumnos"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@+id/tv_alumnos"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="57dp"
        android:background="@color/white" />

    <Button
        android:id="@+id/btn_volver"
        android:layout_width="235dp"
        android:layout_height="50dp"
        android:layout_below="@+id/spinner_lista_alumnos"
        android:layout_alignParentStart="true"
        android:layout_gravity="left"
        android:layout_marginStart="35dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="#4FE62828"
        android:onClick="btnVolver"
        android:text="@string/btn_volver" />

    <Button
        android:id="@+id/btn_ver_tutor"
        android:layout_width="235dp"
        android:layout_height="50dp"
        android:layout_below="@+id/spinner_lista_alumnos"
        android:layout_alignParentEnd="true"
        android:layout_gravity="left"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="59dp"
        android:backgroundTint="#E33737"
        android:onClick="ModificarAlumno"
        android:text="@string/btn_modificar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="452dp"
        android:layout_below="@+id/btn_volver"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txt_observaciones"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:ems="10"
            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>